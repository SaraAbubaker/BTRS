@{
}

<style> .signup-form {
    width: 50%;
    margin: 0 auto;
}

.form-table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 15px;
}

.form-table td {
    padding: 10px;
    border: 1px solid #ddd;
}

.input-field {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
}

.select-field {
    width: 100%;
    padding: 8px;
    box-sizing: border-box;
}

.submit-button {
    display: inline-block;
    padding: 10px 20px;
    font-size: 16px;
    cursor: pointer;
    text-align: center;
    text-decoration: none;
    outline: none;
    color: #fff;
    background-color: #007bff;
    border: none;
    border-radius: 5px;
}

.submit-button:hover {
    background-color: #0056b3;
} </style>

@using (Html.BeginForm("signup", "User", FormMethod.Post, new { @class = "signup-form" }))
{
    <table class="form-table">

        <tr>
            <td>
                Name
            </td>
            <td>
                @Html.TextBox("name", null, new { @type = "text", @class = "input-field" })
            </td>
        </tr>
        <tr>
            <td>
                Username
            </td>
            <td>
                @Html.TextBox("username", null, new { @type = "text", @class = "input-field" })
            </td>
        </tr>
        <tr>
            <td>
                Password
            </td>
            <td>
                @Html.TextBox("password", null, new { @type = "password", @class = "input-field" })
            </td>
        </tr>
        <tr>
            <td>
                Phone Number
            </td>
            <td>
                @Html.TextBox("phone_number", null, new { @type = "text", @class = "input-field" })
            </td>
        </tr>
        <tr>
            <td>
                Email Address
            </td>
            <td>
                @Html.TextBox("email_address", null, new { @type = "text", @class = "input-field" })
            </td>
        </tr>
        <tr>
            <td>
                Gender
            </td>
            <td>
                @Html.DropDownList("gender", new SelectList(new List<string> { "Male", "Female" }), null, new { @class = "select-field" })
            </td>
        </tr>
    </table>
    @Html.TextBox("signup", "Sign Up", new { @type = "submit", @class = "submit-button" })
}

@TempData["Msg"]